<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Indonesia"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@color/colorPrimary"
            android:textStyle="bold"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_positif_covid"/>
            <TextView
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Positif"
                android:textColor="#F30606"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:id="@+id/PsfCovid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D80C0C"
                android:text="998"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_nurse"/>
            <TextView
                android:textColor="#8CF311"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Di Rawat "/>
            <TextView
                android:textColor="#8CF311"
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:id="@+id/diRs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="998"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_protection"/>
            <TextView
                android:textColor="#3779C8"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Sembuh"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:id="@+id/psnSmbh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3779C8"
                android:text="998"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="60dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_dead_body"/>
            <TextView
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Pasien Meninggal"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:id="@+id/psnMninggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="998"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>